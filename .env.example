# Letta Configuration
LETTA_API_KEY=<your_letta_api_key_here>
# Server Authentication (use LETTA_PASSWORD for new deployments)
# LETTA_PASSWORD takes precedence over LETTA_SERVER_PASSWORD if both are set
LETTA_PASSWORD=<your_server_password_here>
# LETTA_SERVER_PASSWORD is deprecated but supported for backward compatibility
# LETTA_SERVER_PASSWORD=your_legacy_password_here
LETTA_BASE_URL=http://localhost:8283
LETTA_ENVIRONMENT=SELF_HOSTED

# Model configuration note:
# Models are defined per-agent on the Letta server. This app does not override an
# agent's model at runtime. For ephemeral agents created by this app (e.g., the
# secretary or demo agents from profiles), the defaults live in spds/config.py as
# DEFAULT_AGENT_MODEL and DEFAULT_EMBEDDING_MODEL.

# Ephemeral agent policy (disabled by default to prioritize continuity)
# When false, the app will not create new agents from profiles and will refuse
# to create a new secretary unless one is provided below.
SPDS_ALLOW_EPHEMERAL_AGENTS=false

# Secretary reuse configuration (preferred)
# If set, the app will reuse this secretary and will not attempt to create a new one
# when SPDS_ALLOW_EPHEMERAL_AGENTS=false.
# SECRETARY_AGENT_ID=ag-123-your-secretary-id
# SECRETARY_AGENT_NAME=Your Secretary Name

# Conversation Parameters
PARTICIPATION_THRESHOLD=30
URGENCY_WEIGHT=0.6
IMPORTANCE_WEIGHT=0.4

# Tool schema export behavior
# By default, the app avoids passing Pydantic classes to the Letta tool sandbox
# and sends only JSON Schema. Enable these toggles if your Letta tools runtime
# has Pydantic installed and supports return model validation.
# SPDS_TOOLS_USE_PYDANTIC_SCHEMAS=true
# SPDS_TOOLS_USE_RETURN_MODEL=true
