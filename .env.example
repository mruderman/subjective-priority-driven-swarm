# Letta Configuration
LETTA_API_KEY=your_letta_api_key_here
# Server Authentication (use LETTA_PASSWORD for new deployments)
# LETTA_PASSWORD takes precedence over LETTA_SERVER_PASSWORD if both are set
LETTA_PASSWORD=your_server_password_here
# LETTA_SERVER_PASSWORD is deprecated but supported for backward compatibility
# LETTA_SERVER_PASSWORD=your_legacy_password_here
LETTA_BASE_URL=http://localhost:8283
LETTA_ENVIRONMENT=SELF_HOSTED

# Model Configuration
AGENT_MODEL=openai/gpt-4
EMBEDDING_MODEL=openai/text-embedding-ada-002

# Conversation Parameters
PARTICIPATION_THRESHOLD=30
URGENCY_WEIGHT=0.6
IMPORTANCE_WEIGHT=0.4